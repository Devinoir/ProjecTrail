<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjecTrail.View.NewProjectModalPage"
             Title="NewProjectModalPage">
    <StackLayout Padding="20">
        <Label Text="Neues Project" FontSize="Medium" HorizontalOptions="Center" />

        <Entry x:Name="ProjectNameEntry" Placeholder="Projektname"/>
        <Entry x:Name="ProjectDescriptionEntry" Placeholder="Beschreibung"/>
        <Entry x:Name="ProjectKostenstelleEntry" Placeholder="Kostenstelle"/>

        <!-- Weitere Eingabefelder nach Bedarf hinzufÃ¼gen -->

        <Button Text="Project Erstellen" Clicked="OnCreateProjectClicked"/>
    </StackLayout>
</ContentPage>